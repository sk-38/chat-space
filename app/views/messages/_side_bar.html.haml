.said-bar
  .said-bar__user-name
    .top-items
      = current_user.name
      %P.top-items__name
      .top-items__icons
        = link_to new_group_path , class: "top-items__icons__new-group" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user) do
          =icon('fas','cog', class: "top-items__icons__edit-user")
  .groups
    - current_user.groups.each do |group|
      .group     
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest-message
            = group.show_last_message
